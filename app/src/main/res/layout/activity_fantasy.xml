<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/g"
    tools:context=".FantasyActivity">


    <ImageView
        android:layout_width="117dp"
        android:layout_height="193dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="420dp"
        android:background="@color/cardview_shadow_start_color"
        android:scaleType="centerCrop"
        android:src="@drawable/g4" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="376dp"
        android:backgroundTint="#AD774828"
        android:text="Harry Potter (20$)"
        android:textStyle="bold"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <TextView
        android:layout_width="395dp"
        android:layout_height="248dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="213dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="255dp"
        android:background="#19F3EFEF"
        android:text="Author: J.K. Rowling. Overview:Enter the magical world of wizards and witches in this thrilling fantasy series. Follow the adventures of Harry Potter and his friends as they battle against the dark forces"
        android:textSize="16sp"
        android:textStyle="bold" />


    <ImageView
        android:layout_width="122dp"
        android:layout_height="163dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="155dp"
        android:background="@color/cardview_shadow_start_color"
        android:scaleType="centerCrop"
        android:src="@drawable/h5" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#AD774828"
        android:text=" Mistborn (30$) "
        android:textStyle="bold"
        tools:ignore="DuplicateClickableBoundsCheck" />

    <TextView
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="32dp"
        android:background="#19F3EFEF"
        android:text="Author: Brandon Sanderson.         Overview: This series, which takes place in a parallel dimension, recounts the exploits of Lyra Belacqua as she sets out to solve the puzzles of her reality."
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/cartItem"
        android:layout_width="68dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/f6" />



</RelativeLayout>


